

<div class="container">
	<div class= "name">
		<h1><%= @personality.first_name %> <%= @personality.last_name %></h1>
	</div>
	<div id="profile-line"></div>
</div>
<div class="container specific">
		<div class="left-container">
			<div class="description">
				<p> <strong>Desired age</strong>: <%= @personality.desired_age %></p>
				<p><strong>Bio</strong>: <%= @personality.bio%></p>
				<p><strong>Price</strong>: <%= @personality.price_per_day %></p>
			</div>
				<div class="edit-personality">
					<% if policy(@personality).edit? %>
				  		<%= link_to "Edit Personality", edit_personality_path(@personality) %>
					<% end %>
				</div>
			<div class="personalities">
				<p><strong><%= @personality.first_name %> <%= @personality.last_name %> is a fake personality of <%= @personality.user.first_name%></strong></p>
				<% if @personalities.count > 1 %>
					<p>Those are <%=@personality.user.first_name%>'s other personalities:</p>
						<% @personalities.each do |personality| %>
							<div class="personality">
								<%= link_to personality_path(personality) do %>
								<% next if personality == @personality   %>
								<%= cl_image_tag personality.picture, height: 300, width: 400, crop: :fill %>
								<p> <%= personality.first_name %> </p>
								<% end %>
							</div>
						<% end %>
				<% else %>
					<p>This is  <%= @personality.user.first_name%>'s only personality</p>
				<% end %>
			</div>
			
			
			
			
		</div>

		<div class="right-container">
			
	        <%= cl_image_tag @personality.picture, height: 300, width: 400, crop: :fill, gravity: :face %>
			
			 <div class="bookings">		
				<%= simple_form_for [@personality, @booking] do |f| %>
				    <%= date_field_tag(:date, @date, options = {min: Date.today()}) %>
				    <%= f.submit "Book now", class: "btn btn-green btn-longer" %>
				<% end %>
			</div>
		</div>
</div>
