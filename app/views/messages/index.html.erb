<div class="container">
  <h1>My inbox</h1>
  <% unless @messages.empty? %>

    <% @messages.each do |message| %>

      <div class="message-container <%= 'unread' unless message.read %>">
        <%= cl_image_tag message.booking.personality.picture, height: 100, width: 100, crop: :fill, class: 'avatar' %>
        <div class="message-info">
          <p class="sender-name"><%= message.booking.personality.first_name %> (<%= message.read ? 'Read' : 'Unread' %>)</p>
          <p class="message-content"><%= message.content %></p>
        </div>
        <div class="message-actions">
          <%= link_to "Open", message_path(message), class: 'btn btn-green' %>
          <p><%= time_ago_in_words(message.created_at) %> ago</p>
        </div>
      </div>

    <% end %>

  <% else %>

    <p> You don't have any messages, please check back later! </p>

  <% end %>

</div>
